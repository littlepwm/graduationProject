<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.a.modules.sys.dao.SysRoleMenuDao">
	<select id="AqueryMenuIdList" resultType="long">
		select menu_id from
		sys_role_menu where role_id = #{value}
	</select>

	<select id="AqueryRoleIdList" resultType="long">
		select role_id from
		sys_role_menu where menu_id = #{value}
	</select>


	<delete id="AdeleteBatchByRids">
		delete from sys_role_menu where role_id in
		<foreach item="roleId" collection="array" open="("
			separator="," close=")">
			#{roleId}
		</foreach>
	</delete>

	<delete id="AdeleteBatchByMids">
		delete from sys_role_menu where menu_id in
		<foreach item="menuId" collection="array" open="("
			separator="," close=")">
			#{menuId}
		</foreach>
	</delete>

</mapper>